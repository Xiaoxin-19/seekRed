<!--pages/spot/spot.wxml-->
<van-row >


<!-- 地区列表 -->
  <van-col span="7" >
	<scroll-view style="height: {{windowHeight}}px" class="cityBackground">
		<block wx:for="{{cities}}" wx:key="id">
			<view  id="{{index}}"  class="{{item.cityStyle}}" bind:tap="clickCity" >{{item.name}}</view>
		</block>
	</scroll-view>
  </van-col>


<!-- 景点介绍栏 -->
  <van-col span="17">
	<scroll-view  style="height: {{windowHeight}}px">
		
		<block wx:for="{{spotList}}" wx:key="_id">
			<van-card
				title-class="font-color-red"
				title="{{item.name}}"
				lazy-load="true"
				thumb="{{item.preview}}"
				thumb-link="../article/article?id={{item._id}}&pageTitle={{item.name}}"
			>
				<view slot="desc">
					<view><text class="font-weigh-bolder"> 票价：</text><text slot="price">{{item.price}}</text>	 </view>
					<view><text class="font-weigh-bolder"> 开放时间：</text>{{item.openingHours}}</view>
				</view>
				<view slot="bottom">
					<text class="font-weigh-bolder"> 地址：</text>
					<text class="text-overflow" user-select="true"> {{item.address}}</text>
				</view>
			</van-card>
		</block>

	</scroll-view>
  </van-col>

  

</van-row>




